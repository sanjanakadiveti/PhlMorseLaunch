<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/bevan"
        android:text="Score"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/displayScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/bevan"
        android:text="TextView"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="232dp"
        android:fontFamily="@font/bevan"
        android:text="Correct Letters"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/displayCorrect"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/bevan"
        android:text="Incorrect Letters"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/displayCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/displayScore"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bevan"
        android:text="TextView"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/displayIncorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/displayCorrect"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/bevan"
        android:text="TextView"
        android:textSize="18sp"
        android:typeface="normal" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:text="done" />
</RelativeLayout>