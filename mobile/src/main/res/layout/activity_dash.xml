<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:tools="http://schemas.android.com/tools"    xmlns:app="http://schemas.android.com/apk/res-auto">    <ImageView        android:id="@+id/imageView3"        android:layout_width="100dp"        android:layout_height="75dp"        android:layout_above="@+id/imageView2"        android:layout_centerHorizontal="true"        android:layout_marginBottom="-80dp"        app:srcCompat="@drawable/logo"        tools:layout_editor_absoluteX="16dp"        tools:layout_editor_absoluteY="16dp" />    <TextView        android:id="@+id/dotDescription"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentTop="true"        android:layout_centerHorizontal="true"        android:layout_marginTop="148dp"        android:text="Tap and HOLD the button to enter dashes."        android:textColor="@android:color/black"        android:textSize="18sp"        android:textStyle="bold" />    <TextView        android:id="@+id/dotDashText"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/dotDescription"        android:layout_centerHorizontal="true"        android:layout_marginTop="55dp"        android:text="Morse:"        android:textColor="#000000"        android:textStyle="bold" />    <Button        android:id="@+id/nextDotbutton"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_centerHorizontal="true"        android:layout_marginBottom="26dp"        android:background="@android:color/transparent"        android:text="Next" />    <TextView        android:id="@+id/instruction"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/dotDescription"        android:layout_centerHorizontal="true"        android:layout_marginTop="15dp"        android:text="Enter at least three dashes."        android:textColor="@android:color/black"        android:textSize="18sp"        android:textStyle="bold" />    <ImageView        android:id="@+id/imageView2"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentStart="true"        android:layout_alignParentTop="true"        android:layout_marginTop="80dp"        android:clickable="false"        android:scaleType="fitXY"        app:srcCompat="@drawable/dashes" />    <ImageButton        android:id="@+id/button3"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_centerHorizontal="true"        android:layout_marginBottom="165dp"        android:background="#0000"        app:srcCompat="@drawable/tap" /></RelativeLayout>