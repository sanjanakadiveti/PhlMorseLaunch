<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="71dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:layout_toStartOf="@+id/textView2"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dotDescription"
        android:layout_alignStart="@+id/dotDashText"
        android:layout_marginStart="11dp"
        android:text="Dashes"
        android:textColor="@android:color/black"
        android:textSize="37dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/dotDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="Tap and hold the button to enter dashes."
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dotDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:text="Button" />

    <TextView
        android:id="@+id/dotDashText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dotDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="morse:"
        android:textColor= "@android:color/holo_red_dark" />

    <Button
        android:id="@+id/nextDotbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:text="Next" />

    <TextView
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dotDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Enter at least three dashes."
        android:textColor="@android:color/black"/>
</RelativeLayout>